<?xml version="1.0" encoding="UTF-8"?>

<beans
xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:aop="http://www.springframework.org/schema/aop"
      xmlns:context="http://www.springframework.org/schema/context"
      xmlns:jee="http://www.springframework.org/schema/jee"
      xmlns:jms="http://www.springframework.org/schema/jms"
      xmlns:lang="http://www.springframework.org/schema/lang"
      xmlns:security="http://www.springframework.org/schema/security"
      xmlns:tx="http://www.springframework.org/schema/tx"
      xmlns:util="http://www.springframework.org/schema/util"
      xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
http://www.springframework.org/schema/jms http://www.springframework.org/schema/jms/spring-jms-3.0.xs
http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-3.0.xsd
http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd"

  default-autowire="no"
  default-lazy-init="true"  
>

	  <bean
     id="business.FedoraContainerHandler"
	      class="de.escidoc.core.om.business.fedora.container.FedoraContainerHandler"
          scope="prototype"
	  >

	    <property name="pdp">

	      <ref bean="service.PolicyDecisionPointBean"/>
	    </property>
	    <property name="containerCache">

	      <ref bean="container.DbContainerCache"/>
	    </property>
	    <property name="itemCache">

	      <ref bean="item.DbItemCache"/>
	    </property>
	    <property name="itemHandler">

	      <ref bean="business.FedoraItemHandler"/>
	    </property>
	    <property name="contentRelationHandler">

	      <ref bean="business.FedoraContentRelationHandler"/>
	    </property>
	    <property name="fedoraUtility">

	      <ref bean="escidoc.core.business.FedoraUtility"/>
	    </property>
	    <property name="tripleStoreUtility">

	      <ref bean="business.TripleStoreUtility"/>
	    </property>
	    <property name="idProvider">

	      <ref bean="escidoc.core.business.EscidocIdProvider"/>
	    </property>

	  </bean>

	  <bean
     id="business.IngestFacade"
	      class="de.escidoc.core.om.business.fedora.ingest.FedoraIngestFacade"
          scope="singleton"
	  >

	    <property name="resourceMapperDao">
	      <ref bean="business.resourceMapperDao"/>
	    </property>
	    <property name="formatter">
	      <ref bean="business.ingestReturnValueFormatter"/>
	    </property>
	  </bean>

	  <bean
     id="service.SemanticStoreHandler"
	      class="de.escidoc.core.om.service.SemanticStoreHandler"
	  >

	    <property name="semanticStoreHandler">

	      <ref bean="business.FedoraSemanticStoreHandler"/>
	    </property>

	  </bean>

	  <bean
     id="business.FedoraIngestHandler"
	      class="de.escidoc.core.om.business.fedora.ingest.FedoraIngestHandler"
          scope="prototype"
	  >

	    <property name="ingestFacade">
	      <ref bean="business.IngestFacade"/>
	    </property>
	  </bean>

	  <bean
     id="service.FedoraDescribeDeviationHandler"
	      class="de.escidoc.core.om.service.FedoraDescribeDeviationHandler"
          scope="prototype"
	  >

	    <property name="fedoraDescribeDeviationHandler">

	      <ref bean="business.FedoraDescribeDeviationHandler"/>
	    </property>

	  </bean>

	  <bean
     id="service.ItemHandler"
	      class="de.escidoc.core.om.service.ItemHandler"
          scope="prototype"
	  >

	    <property name="itemHandler">

	      <ref bean="business.FedoraItemHandler"/>
	    </property>

	  </bean>

	  <bean
     id="service.FedoraManagementDeviationHandler"
	      class="de.escidoc.core.om.service.FedoraManagementDeviationHandler"
          scope="prototype"
	  >

	    <property name="fedoraManagementDeviationHandler">

	      <ref bean="business.FedoraManagementDeviationHandler"/>
	    </property>

	  </bean>

	  <bean
     id="business.FedoraAccessDeviationHandler"
	      class="de.escidoc.core.om.business.fedora.deviation.FedoraAccessDeviationHandler"
	  >

	  </bean>

	  <bean
     id="service.IngestHandler"
	      class="de.escidoc.core.om.service.IngestHandler"
          scope="prototype"
	  >

	    <property name="ingestHandler">

	      <ref bean="business.FedoraIngestHandler"/>
	    </property>

	  </bean>

	  <bean
     id="business.FedoraContentRelationHandler"
	      class="de.escidoc.core.om.business.fedora.contentRelation.FedoraContentRelationHandler"
          scope="prototype"
	  >

	    <property name="contentRelationCache">

	      <ref bean="contentRelation.DbContentRelationCache"/>
	    </property>
	    <property name="indexingHandler">

	      <ref bean="common.business.indexing.IndexingHandler"/>
	    </property>
	    <property name="fedoraUtility">

	      <ref bean="escidoc.core.business.FedoraUtility"/>
	    </property>
	    <property name="idProvider">

	      <ref bean="escidoc.core.business.EscidocIdProvider"/>
	    </property>

	  </bean>

	  <bean
     id="business.ingestReturnValueFormatter"
	      class="de.escidoc.core.om.business.fedora.ingest.IngestReturnValueFormatter"
	  >

	  </bean>

	  <bean
     id="service.ContainerHandler"
	      class="de.escidoc.core.om.service.ContainerHandler"
          scope="prototype"
	  >

	    <property name="containerHandler">

	      <ref bean="business.FedoraContainerHandler"/>
	    </property>

	  </bean>

	  <bean
     id="service.ContextHandler"
	      class="de.escidoc.core.om.service.ContextHandler"
	  >

	    <property name="contextHandler">

	      <ref bean="business.FedoraContextHandler"/>
	    </property>

	  </bean>

	  <bean
     id="business.FedoraItemHandler"
	      class="de.escidoc.core.om.business.fedora.item.FedoraItemHandler"
          scope="prototype"
	  >

	    <property name="pdp">

	      <ref bean="service.PolicyDecisionPointBean"/>
	    </property>
	    <property name="contentRelationHandler">

	      <ref bean="business.FedoraContentRelationHandler"/>
	    </property>
	    <property name="fedoraUtility">

	      <ref bean="escidoc.core.business.FedoraUtility"/>
	    </property>
	    <property name="tripleStoreUtility">

	      <ref bean="business.TripleStoreUtility"/>
	    </property>
	    <property name="idProvider">

	      <ref bean="escidoc.core.business.EscidocIdProvider"/>
	    </property>
	    <property name="connectionUtility">

	      <ref bean="escidoc.core.common.util.service.ConnectionUtility"/>
	    </property>
	    <property name="indexingHandler">

	      <ref bean="common.business.indexing.IndexingHandler"/>
	    </property>
	    <property name="ITemCache">

	      <ref bean="item.DbItemCache"/>
	    </property>

	  </bean>

	  <bean
     id="business.FedoraContextHandler"
	      class="de.escidoc.core.om.business.fedora.context.FedoraContextHandler"
          scope="prototype"
	  >

	    <property name="pdp">

	      <ref bean="service.PolicyDecisionPointBean"/>
	    </property>
	    <property name="contentRelationHandler">

	      <ref bean="business.FedoraContentRelationHandler"/>
	    </property>
	    <property name="fedoraUtility">

	      <ref bean="escidoc.core.business.FedoraUtility"/>
	    </property>
	    <property name="idProvider">

	      <ref bean="escidoc.core.business.EscidocIdProvider"/>
	    </property>
	    <property name="contextCache">

	      <ref bean="context.DbContextCache"/>
	    </property>
	    <property name="indexingHandler">

	      <ref bean="common.business.indexing.IndexingHandler"/>
	    </property>

	  </bean>

	  <bean
     id="service.ContentRelationHandler"
	      class="de.escidoc.core.om.service.ContentRelationHandler"
          scope="prototype"
	  >

	    <property name="contentRelationHandler">

	      <ref bean="business.FedoraContentRelationHandler"/>
	    </property>

	  </bean>

	  <bean
     id="service.FedoraAccessDeviationHandler"
	      class="de.escidoc.core.om.service.FedoraAccessDeviationHandler"
          scope="prototype"
	  >

	    <property name="fedoraAccessDeviationHandler">

	      <ref bean="business.FedoraAccessDeviationHandler"/>
	    </property>

	  </bean>

	  <bean
     id="business.TripleStoreRelationsUtility"
	      class="de.escidoc.core.om.business.fedora.TripleStoreRelationsUtility"
	  >

	    <property name="myDataSource">

	      <ref bean="fedora.triplestore.DataSource"/>
	    </property>

	  </bean>

	  <bean
     id="business.ingestValidator"
	      class="de.escidoc.core.om.business.fedora.ingest.XmlIngestValidator"
	  >

	  </bean>

	  <bean
     id="business.FedoraDescribeDeviationHandler"
	      class="de.escidoc.core.om.business.fedora.deviation.FedoraDescribeDeviationHandler"
	  >

	    <property name="connectionUtility">

	      <ref bean="escidoc.core.common.util.service.ConnectionUtility"/>
	    </property>

	  </bean>

	  <bean
     id="business.FedoraManagementDeviationHandler"
	      class="de.escidoc.core.om.business.fedora.deviation.FedoraManagementDeviationHandler"
	  >

	  </bean>

	  <bean
     id="business.FedoraSemanticStoreHandler"
	      class="de.escidoc.core.om.business.fedora.FedoraSemanticStoreHandler"
	  >

	  </bean>

<bean id="performance.statistics" class="de.escidoc.core.om.performance.Statistics"/>
<bean id="performance.statisticsInterceptor" class="de.escidoc.core.om.performance.PerformanceStatisticsInterceptor">
	<property ref="performance.statistics" name="statistics"/>
</bean>

<!-- Advisor with pointcut
NOTE: 
- only methods that are public and nonfinal will be proxied
- only classes that are nonfinal will be proxied
- for all proxies cglib is used because it is much faster than the jdk proxy mechanism.
- be careful not to include the Statistics class in the pointcut expression, otherwise unwanted side effects may happen. 
-->
<aop:config proxy-target-class="true">
	<aop:advisor pointcut="execution(!final * de.escidoc.core.om.business..*.*(..))" advice-ref="performance.statisticsInterceptor"/> 
</aop:config>

<bean id="business.resourceMapperDao" class="de.escidoc.core.om.business.fedora.ingest.ResourceMapperDao">
	<property name="resourceMappers">
		<list>
			<bean class="de.escidoc.core.om.business.fedora.ingest.ResourceMapperBean">
     			<property name="resourceType" value="ITEM"/>
     			<property name="resource" ref="business.FedoraItemHandler"/>
     			<property name="validator" ref="business.ingestValidator"/>
       		</bean>
    		<bean class="de.escidoc.core.om.business.fedora.ingest.ResourceMapperBean">
     			<property name="resourceType" value="CONTEXT"/>
     			<property name="resource" ref="business.FedoraContextHandler"/>
     			<property name="validator" ref="business.ingestValidator"/>
    		</bean>
    		<bean class="de.escidoc.core.om.business.fedora.ingest.ResourceMapperBean">
     			<property name="resourceType" value="CONTENT_RELATION"/>
     			<property name="resource" ref="business.FedoraContentRelationHandler"/>
     			<property name="validator" ref="business.ingestValidator"/>
    		</bean>
    		<bean class="de.escidoc.core.om.business.fedora.ingest.ResourceMapperBean">
     			<property name="resourceType" value="CONTAINER"/>
     			<property name="resource" ref="business.FedoraContainerHandler"/>
     			<property name="validator" ref="business.ingestValidator"/>
    		</bean>
       		<bean class="de.escidoc.core.om.business.fedora.ingest.ResourceMapperBean">
     			<property name="resourceType" value="OU"/>
     			<property name="resource" ref="service.OrganizationalUnitHandlerBean"/>
     			<property name="validator" ref="business.ingestValidator"/>
    		</bean>
    	</list>
	</property>
</bean>

</beans>
